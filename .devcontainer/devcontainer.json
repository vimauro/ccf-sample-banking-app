{
  "name": "CCF Sample Banking App",
  "image": "mcr.microsoft.com/ccf/app/dev:4.0.2-virtual",
  "customizations": {
    "vscode": {
      "extensions": [
        "vsls-contrib.codetour",
        "esbenp.prettier-vscode",
        "timonwong.shellcheck",
        "github.vscode-pull-request-github",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": true
        },
      "remote.extensionKind": {
         "ms-vscode-remote.remote-containers": "workspace"
       },
        "remote.containers.showLocalButton": true
      }
    }
  },
  "postStartCommand": "scripts/devContainer_OnStart.sh",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "20.10.21"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "16.17.0",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/powershell:1": {
      "modules": "Az.Resources, Microsoft.Graph.Authentication, Microsoft.Graph.Applications"
    },
    "ghcr.io/rchaganti/vsc-devcontainer-features/azurebicep:1": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {}
  }
}
